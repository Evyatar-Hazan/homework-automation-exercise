# eBay Test Credentials
# Copy this file to .env and fill in your credentials
# .env will be ignored by git for security

EBAY_TEST_EMAIL=your_email@gmail.com
EBAY_TEST_PASSWORD=your_password_here

# Optional: Browser settings
HEADLESS=False
BROWSER_TIMEOUT=10

# Optional: Allure settings
ALLURE_RESULTS_DIR=reports/allure-results

# ============================================================
# Grid/Browser Infrastructure Configuration
# ============================================================
# These settings control HOW tests execute (infrastructure level)
# Not tied to specific tests - affects all tests automatically

# Use Selenium Grid/Moon for remote execution
# true = run tests on Grid (requires Grid server running)
# false = run tests locally with undetected-chromedriver
USE_GRID=false

# Selenium Grid Hub URL
# Examples:
#   Local Grid: http://localhost:4444/wd/hub
#   Remote Grid: https://grid.company.com/wd/hub
#   Moon: http://localhost:4444/wd/hub
GRID_URL=http://localhost:4444/wd/hub

# Browser Name (infrastructure level)
# Options: chrome, firefox, edge
# This will be used for ALL tests unless overridden per-test
BROWSER_NAME=chrome

# Browser Version (infrastructure level)
# Options: 127, 128, latest (for Chrome/Edge)
#          121, 122, latest (for Firefox)
# Capabilities will be loaded from automation/config/browsers.yaml
BROWSER_VERSION=127
